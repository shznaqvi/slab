<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.aku.hassannaqvi.slab.Adapter.FollowupAdapter"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/lldaysCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                 <TextView
                     android:layout_width="80dp"
                     android:layout_height="80dp"
                     android:textColor="@color/white"
                     android:textSize="30sp"
                     android:text="2"
                     android:paddingLeft="0dp"
                     android:paddingTop="0dp"
                     android:gravity="center"
                     android:background="@drawable/roundcount"
                     />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:text="Days"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingRight="0dp"
                    android:layout_toLeftOf="@id/lltype"
                    android:layout_toRightOf="@id/lldaysCount"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/firstline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/childname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Child Name"
                                android:textStyle="bold"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/studyID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="0dp"
                                android:text="StudyID:1234"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="Enrolment Date"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="Last FollowUp Date"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/mothername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingTop="2dp"
                                android:textStyle="bold"

                                android:text="Mother Name"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/MRno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingTop="0dp"
                                android:text="MR# 123-45-67"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/enrolmentDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="10-04-2018"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/dischargeDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:paddingTop="0dp"
                                android:text="14-04-2018"
                                android:textSize="14sp" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="-5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/llinfo"
                    android:gravity="center_horizontal"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/green"
                    android:text="Not Due"/>
                <LinearLayout
                    android:id="@+id/lltype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/status"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/typeimg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/typetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:text="Home"
                        android:textSize="12sp" />

                </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/tick"
                    android:visibility="gone" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>
</layout>



