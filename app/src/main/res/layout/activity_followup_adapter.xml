<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.aku.hassannaqvi.slab.Adapter.FollowupAdapter">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/lldaysCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fupround"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/roundcount"
                        android:gravity="center"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:text="Day"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/lltype"
                    android:layout_toRightOf="@id/lldaysCount"
                    android:orientation="vertical"
                    android:paddingRight="0dp">

                    <LinearLayout
                        android:id="@+id/firstline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/childname"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="2dp"
                                android:text="Child Name"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/MRno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingTop="0dp"
                                android:text="MR# 123-45-67"

                                android:textStyle="bold"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:id="@+id/mothername"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingTop="2dp"
                                android:text="Mother Name"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studyID"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="0dp"
                                android:text="StudyID:1234"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/labelenrdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="Enrolment Date: "
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/enrolmentDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/labelenrdate"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="10-04-2018"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/labelfupdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="Follow Up Date: "
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/followupDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@id/labelfupdate"
                                android:gravity="left"
                                android:paddingTop="0dp"
                                android:text="14-04-2018"
                                android:textSize="14sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlDischargedt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/labelDischargeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="0dp"
                                android:text="Discharge Date: "
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/DischargeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@id/labelDischargeDate"
                                android:gravity="left"
                                android:paddingTop="0dp"
                                android:text="14-04-2018"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/llinfo"
                    android:background="@color/green"
                    android:gravity="center_horizontal"
                    android:paddingLeft="-5dp"
                    android:paddingTop="-5dp"
                    android:text="Incomplete"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/lltype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/status"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/typehome"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/home"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/typehospital"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hospital" />

                        <ImageView
                            android:id="@+id/typephone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/phone"
                            android:visibility="gone" />


                    </FrameLayout>


                    <TextView
                        android:id="@+id/typetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:text="Home"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/tick"
                    android:visibility="gone" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>
</layout>



