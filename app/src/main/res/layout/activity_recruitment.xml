                        <EditText
                            android:id="@+id/sen06"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sen06"
                            android:inputType="number"
                            android:digits="1234567890"
                            android:maxLength="11" />

                    </LinearLayout>
                </LinearLayout>
                <!--sen07-->
                <LinearLayout
