                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="4"
                                android:focusable="false"
                                android:hint="DD/MM/YYYY"
                                android:textColor="@android:color/black"
                                app:dateFormat="dd-MM-yyyy" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--sen04-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/sen04err"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:visibility="gone">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="9.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@color/colorPrimary"
                            android:text="@string/sen04"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white" />

                        <EditText
                            android:id="@+id/sen04"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sen04"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz1234567890/-.\"
                            android:inputType="text" />

                    </LinearLayout>
                </LinearLayout>

                <!--sen05-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/sen05err"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:visibility="gone">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="9.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@color/colorPrimary"
                            android:text="@string/sen05"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white" />

                        <EditText
                            android:id="@+id/sen05"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sen05"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:maxLength="11" />

                    </LinearLayout>
                </LinearLayout>

                <!--sen06-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/sen06err"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
